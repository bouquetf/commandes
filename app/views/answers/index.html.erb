<p id="notice"><%= notice %></p>

<h1>Listing Answers</h1>

<table>
  <thead>
    <tr>
      <th>Nickname</th>
      <th>Order</th>
      <th>Amount</th>
      <th>Payed</th>
      <th>Command</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.nickname %></td>
        <td><%= answer.order %></td>
        <td><%= answer.amount %></td>
        <td><%= answer.payed %></td>
        <td><%= answer.command %></td>
        <td><%= link_to 'Show', command_answer_path(@command, answer) %></td>
        <td><%= link_to 'Edit', edit_command_answer_path(@command, answer) %></td>
        <td><%= link_to 'Destroy', command_answer_path(@command, answer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_command_answer_path(@command) %>
